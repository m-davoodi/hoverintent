{
  "name": "js-hoverintent",
  "version": "1.0.0",
  "description": "Hover intent in javascript",
  "repository": "https://github.com/m-davoodi/hoverintent.git",
  "author": "Mohsen Davoodi <mohsen.31369@gmail.com>",
  "license": "MIT",
  "main": "build/cjs/redux.js",
  "unpkg": "build/umd/redux.js",
  "module": "build/es/redux.js",
  "files": [
    "build",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "clean": "rimraf build coverage",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" index.d.ts \"**/*.md\"",
    "format:check": "prettier --list-different \"{src,test}/**/*.{js,ts}\" index.d.ts \"**/*.md\"",
    "lint": "eslint src test",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "rollup -c",
    "prepare": "npm run clean && npm run format:check && npm run lint && npm test"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-flow": "^7.0.0",
    "babel-jest": "^24.4.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.3.1",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.5.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.4",
    "sinon": "^7.2.7"
  },
  "dependencies": {
    "lodash-es": "^4.17.11"
  },
  "browserify": {
    "transform": [
      "loose-envify"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [],
    "testRegex": "(/test/.*\\.spec\\.js)$"
  },
  "sideEffects": false
}
